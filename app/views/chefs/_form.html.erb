<%= render 'shared/errors', object: @chef %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @chef do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit(@chef.new_record? ? 'Sign Up' : 'Update', class: 'btn btn-success') %>
    <% end %>
  </div>
</div>
