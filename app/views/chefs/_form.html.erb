<%= render 'shared/errors', object: @chef %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @chef, class: 'form-horizontal' do |f| %>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :password_confirmation, "Confirm" %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :profile, 'Bio' %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :profile, rows: 10 %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-3 col-sm-offset-2">
          <%= f.submit(@chef.new_record? ? 'Register' : 'Update', class: 'btn btn-success') %>
        </div>
      </div>
    <% end %>
  </div>
</div>
