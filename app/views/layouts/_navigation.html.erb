<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to 'Buffet Car', root_path, class: 'btn btn-lg btn-success', id: 'logo' %>
    <div class='nav-item'>
      <%= link_to 'Link 1', '#', class: 'btn btn-default btn-warning' %>
    </div>
    <div class='nav-item'>
      <%= link_to 'Link 2', '#', class: 'btn btn-default btn-warning' %>
    </div>
    <% if logged_in? %>
      <div class='nav-item'>
        <%= link_to 'New Recipe', new_recipe_path, class: 'btn btn-default btn-warning' %>
      </div>
      <ul class="nav-item">
        <li class="dropdown">
          <%= link_to '#', class: 'btn btn-default btn-danger dropdown-toggle', 'data-toggle' => 'dropdown' do %>
            <%= current_user.name %> <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to 'View profile', current_user %></li>
            <li><%= link_to 'Edit Profile', edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to 'Sign out', logout_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
    <% else %>
      <div class='nav-item'>
        <%= link_to 'Sign in', login_path, class: 'btn btn-default btn-success' %>
      </div>
    <% end %>
  </div>
</header>
