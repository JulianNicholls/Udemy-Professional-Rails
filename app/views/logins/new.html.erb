<%= render 'shared/page_title', title: "Sign in" %>

<div class="row">
  <div class="well col-md-6 col-md-offset-3">
    <%= form_tag '/login', class: 'form-horizontal' do %>
      <div class="form-group">
        <div class="col-sm-2">
          <%= label_tag :email %>
        </div>
        <div class="col-sm-10">
          <%= text_field_tag :email %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= label_tag :password %>
        </div>
        <div class="col-sm-10">
          <%= password_field_tag :password %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-3 col-sm-offset-2">
          <%= submit_tag "Sign in", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
